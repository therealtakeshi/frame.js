{
    "env": {
        "browser": true,
        "es6": true
    },
    "globals": {
        "CodeMirror": true,
        "Config": true,
        "FRAME": true,
        "Mousetrap": true,
        "signals": true,
        "UI": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            "tab",
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}